header.form-header
  if (manifest)
    .offline-enabled
      .offline-enabled__icon.not-enabled(title="This form is able to launch offline")
      .offline-enabled__queue-length(title="Records Queued")
  .form-progress
  if (logo.source)
    a.form-header__branding(href="#{logo.href || '#'}")
      .logo-wrapper
        img(src="#{logo.source}", alt="brand logo")
  .form-header__filler
  button.form-header__button--print.btn-icon-only(onclick="return false;").hide
  span.form-language-selector.hide: span= t('form.chooseLanguage')
  button.form-header__button--homescreen.btn-icon-only.hide(type="button")
      i.icon.icon-bookmark-o 
